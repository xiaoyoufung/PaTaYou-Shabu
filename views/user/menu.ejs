<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food App UI</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }
        .app-container {
            max-width: 400px;
            margin: 0 auto;
            background-color: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            min-height: 100vh;
        }
        .header {
            background-color: #B22222;
            color: white;
            padding: 15px;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }
        .search-bar {
            background-color: #f5f5f5;
            border-radius: 20px;
            padding: 10px 15px;
            margin: 10px 15px;
            display: flex;
            align-items: center;
        }
        .category-filters {
            display: flex;
            gap: 10px;
            padding: 10px 15px;
        }
        .filter-btn {
            padding: 5px 15px;
            border-radius: 15px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .active-filter {
            background-color: #B22222;
            color: white;
        }
        .food-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #eee;
        }
        .food-image {
            width: 60px;
            height: 60px;
            background-color: #eee;
            border-radius: 10px;
            margin-right: 15px;
        }

        .food-image img{
            width: 100%;
            height: 100%;
            aspect-ratio: auto;
        }
        .bottom-nav {
            background-color: #B22222;
            display: flex;
            justify-content: space-around;
            padding: 15px;
            position: fixed;
            bottom: 0;
            width: 100%;
            max-width: 400px;
        }
        .nav-item {
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .section {
            display: none;
        }
        .section.active {
            display: block;
        }
    </style>
</head>
<body class="pb-16">
    <div class="app-container">
        <div class="header flex justify-between items-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
        </div>
        
        <div class="search-bar">
            <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" placeholder="Search" class="w-full outline-none bg-transparent">
        </div>
        
        <div class="category-filters">
            <button class="filter-btn active-filter" onclick="showCategory('all')">All</button>
            <button class="filter-btn" onclick="showCategory('meat')">Meat</button>
            <button class="filter-btn" onclick="showCategory('vegetable')">Vegetable</button>
        </div>
        
        <div id="all-section" class="section active">
            <h2 class="px-4 py-2 text-xl font-semibold">All Foods</h2>
            <div class="food-items">
                <!-- All foods content -->

                <% foodlists.forEach((food) => { %>
                    <a href="/user/menu/<%= food.FoodID %>">
                        <div class="food-item">
                            <div class="food-image">
                                <img src="<%= food.food_image_url %>" alt="<%= food.food_name %>">
                            </div>
                            <div class="flex-grow">
                                <h3 class="font-semibold"><%= food.food_name %></h3>
                                <p class="text-gray-500">Mixed greens and vegetables</p>
                            </div>
                            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                            </svg>
                        </div>
                        <a></a>
                    <% })  %>
    
                <!-- Repeat for more items -->
            </div>
        </div>

        <div id="meat-section" class="section">
            <h2 class="px-4 py-2 text-xl font-semibold">Meat</h2>
            <div class="food-items">
                <!-- Meat content -->
                <% const meatList = foodlists.filter((food) => food.food_category_id === 7); %>

                <% meatList.forEach((meat) => { %>
                <a href="/user/menu/<%= meat.FoodID %>">
                    <div class="food-item">
                        <div class="food-image">
                            <img src="<%= meat.food_image_url %>" alt="<%= meat.food_name %>">
                        </div>
                        <div class="flex-grow">
                            <h3 class="font-semibold"><%= meat.food_name %></h3>
                            <p class="text-gray-500">Mixed greens and vegetables</p>
                        </div>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                    </div>
                </a>

                <% })  %>

                <!-- Repeat for more meat items -->
            </div>
        </div>

        <div id="vegetable-section" class="section">
            <h2 class="px-4 py-2 text-xl font-semibold">Vegetable</h2>
            <div class="food-items">
                <!-- Vegetable content -->

                <% foodlists.forEach((food) => { %>
                <a href="/user/menu/<%= food.FoodID %>">
                    <div class="food-item">
                        <div class="food-image"></div>
                        <div class="flex-grow">
                            <h3 class="font-semibold"><%= food.food_name %></h3>
                            <p class="text-gray-500">Mixed greens and vegetables</p>
                        </div>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                    </div>
                </a>
                <% })  %>

                <!-- Repeat for more vegetable items -->
            </div>
        </div>
        
        <div class="bottom-nav">
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
            </div>
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </div>
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
            </div>
        </div>
    </div>

    <script>
        function showCategory(category) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(`${category}-section`).classList.add('active');
            
            // Update button styles
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active-filter');
            });
            event.target.classList.add('active-filter');
        }
    </script>
</body>
</html>