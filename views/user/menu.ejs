<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food App UI</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../styles/menu.css">
       
</head>
<body class="pb-16">
    <div class="app-container">
        <div class="header flex justify-between items-center">
            <div>
                <div class="border-solid border-2 border-white rounded-lg px-4">
                    <p>A1</p>
                </div>
            </div>
            <div class="flex content-center cursor-pointer">
                <svg class="mx-8 cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 1024 1024"><path fill="currentColor" d="m384.064 274.56l.064-50.688A128 128 0 0 1 512.128 96c70.528 0 127.68 57.152 127.68 127.68v50.752A448.19 448.19 0 0 1 955.392 768H68.544A448.19 448.19 0 0 1 384 274.56zM96 832h832a32 32 0 1 1 0 64H96a32 32 0 1 1 0-64m32-128h768a384 384 0 1 0-768 0m447.808-448v-32.32a63.68 63.68 0 0 0-63.68-63.68a64 64 0 0 0-64 63.936V256z"/></svg>
               <div class="cursor-pointer">
                <svg class="cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" fill-rule="evenodd" d="M7.099 1.25H16.9c1.017 0 1.717 0 2.306.204a3.8 3.8 0 0 1 2.348 2.412l-.713.234l.713-.234c.196.597.195 1.307.195 2.36v14.148c0 1.466-1.727 2.338-2.864 1.297a.196.196 0 0 0-.271 0l-.484.442c-.928.85-2.334.85-3.262 0a.907.907 0 0 0-1.238 0c-.928.85-2.334.85-3.262 0a.907.907 0 0 0-1.238 0c-.928.85-2.334.85-3.262 0l-.483-.442a.196.196 0 0 0-.272 0c-1.137 1.04-2.864.169-2.864-1.297V6.227c0-1.054 0-1.764.195-2.361a3.8 3.8 0 0 1 2.348-2.412c.59-.205 1.289-.204 2.306-.204m.146 1.5c-1.221 0-1.642.01-1.96.121A2.3 2.3 0 0 0 3.87 4.334c-.111.338-.12.784-.12 2.036v14.004c0 .12.059.192.134.227a.2.2 0 0 0 .11.018a.2.2 0 0 0 .107-.055a1.695 1.695 0 0 1 2.296 0l.483.442a.907.907 0 0 0 1.238 0a2.407 2.407 0 0 1 3.262 0a.907.907 0 0 0 1.238 0a2.407 2.407 0 0 1 3.262 0a.907.907 0 0 0 1.238 0l.483-.442a1.695 1.695 0 0 1 2.296 0c.043.04.08.052.108.055a.2.2 0 0 0 .109-.018c.075-.035.135-.108.135-.227V6.37c0-1.252-.01-1.698-.12-2.037a2.3 2.3 0 0 0-1.416-1.462c-.317-.11-.738-.12-1.959-.12zM6.25 7.5A.75.75 0 0 1 7 6.75h.5a.75.75 0 0 1 0 1.5H7a.75.75 0 0 1-.75-.75m3.5 0a.75.75 0 0 1 .75-.75H17a.75.75 0 0 1 0 1.5h-6.5a.75.75 0 0 1-.75-.75M6.25 11a.75.75 0 0 1 .75-.75h.5a.75.75 0 0 1 0 1.5H7a.75.75 0 0 1-.75-.75m3.5 0a.75.75 0 0 1 .75-.75H17a.75.75 0 0 1 0 1.5h-6.5a.75.75 0 0 1-.75-.75m-3.5 3.5a.75.75 0 0 1 .75-.75h.5a.75.75 0 0 1 0 1.5H7a.75.75 0 0 1-.75-.75m3.5 0a.75.75 0 0 1 .75-.75H17a.75.75 0 0 1 0 1.5h-6.5a.75.75 0 0 1-.75-.75" clip-rule="evenodd"/></svg>
               </div>
            </div>
            
        </div>
        
        <div class="search-bar">
            <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" placeholder="Search" class="w-full outline-none bg-transparent">
        </div>
        
        <div class="category-filters">
            <button class="filter-btn active-filter" onclick="showCategory('all')">All</button>
            <button class="filter-btn" onclick="showCategory('meat')">Meat</button>
            <button class="filter-btn" onclick="showCategory('vegetable')">Rice & Noodle</button>
            <button class="filter-btn" onclick="showCategory('softserve')">Soft Serve</button>
        </div>
        
        <div id="all-section" class="section active">
            <h2 class="px-4 py-2 text-xl font-semibold">All Foods</h2>
            <div class="food-items">
                <!-- All foods content -->

                <% foodlists.forEach((food) => { %>
                    <a href="/user/menu/<%= food.FoodID %>">
                        <div class="food-item">
                            <div class="food-image">
                                <img src="<%= food.food_image_url %>" alt="<%= food.food_name %>">
                            </div>
                            <div class="flex-grow">
                                <h3 class="font-semibold"><%= food.food_name %></h3>
                                <p class="text-gray-500">Mixed greens and vegetables</p>
                            </div>
                            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                            </svg>
                        </div>
                        <a></a>
                    <% })  %>
    
                <!-- Repeat for more items -->
            </div>
        </div>

        <div id="meat-section" class="section">
            <h2 class="px-4 py-2 text-xl font-semibold">Meat</h2>
            <div class="food-items">
                <!-- Meat content -->
                <% const meatList = foodlists.filter((food) => food.food_category_id === 7); %>

                <% meatList.forEach((meat) => { %>
                <a href="/user/menu/<%= meat.FoodID %>">
                    <div class="food-item">
                        <div class="food-image">
                            <img src="<%= meat.food_image_url %>" alt="<%= meat.food_name %>">
                        </div>
                        <div class="flex-grow">
                            <h3 class="font-semibold"><%= meat.food_name %></h3>
                            <p class="text-gray-500">Mixed greens and vegetables</p>
                        </div>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                    </div>
                </a>

                <% })  %>

                <!-- Repeat for more meat items -->
            </div>
        </div>

        <div id="vegetable-section" class="section">
            <h2 class="px-4 py-2 text-xl font-semibold">Rice & Noodle</h2>
            <div class="food-items">
                <!-- Vegetable content -->
                <% const foundedList = foodlists.filter((food) => food.food_category_id === 4) %>
                <% foundedList.forEach((food) => { %>
                <a href="/user/menu/<%= food.FoodID %>">
                    <div class="food-item">
                        <div class="food-image">
                            <img src="<%= food.food_image_url %>" alt="<%= food.food_name %>">
                        </div>
                        <div class="flex-grow">
                            <h3 class="font-semibold"><%= food.food_name %></h3>
                            <p class="text-gray-500">Mixed greens and vegetables</p>
                        </div>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                    </div>
                </a>
                <% })  %>

                <!-- Repeat for more vegetable items -->
            </div>
        </div>

        <div id="softserve-section" class="section">
            <h2 class="px-4 py-2 text-xl font-semibold">Soft Serve</h2>
            <div class="food-items">
                <% const softserveList = foodlists.filter((food) => food.food_category_id === 6); %>

                <% softserveList.forEach((softserve) => { %>
                <a href="/user/menu/<%= softserve.FoodID %>">
                    <div class="food-item">
                        <div class="food-image">
                            <img src="<%= softserve.food_image_url %>" alt="<%= softserve.food_name %>">
                        </div>
                        <div class="flex-grow">
                            <h3 class="font-semibold"><%= softserve.food_name %></h3>
                            <p class="text-gray-500">Delicious frozen dessert</p>
                        </div>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                    </div>
                </a>
                <% }) %>
            </div>
        </div>
        
        <div class="bottom-nav">
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
            </div>
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </div>
            <div class="nav-item">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
            </div>
        </div>
    </div>

    <script>
        function showCategory(category) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(`${category}-section`).classList.add('active');
            
            // Update button styles
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active-filter');
            });
            event.target.classList.add('active-filter');
        }
    </script>
</body>
</html>