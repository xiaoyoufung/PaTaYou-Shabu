<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Menu Selection</title>
    <style>
        * {
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        body {
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }
        .container {
            display: flex;
            height: 100vh;
        }
        .sidebar {
            width: 60px;
            background-color: #2c3e50;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .logo {
            width: 40px;
            height: 40px;
            background-color: #fff;
            border-radius: 50%;
            margin-bottom: 20px;
        }
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .account-badge {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .account-icon {
            width: 30px;
            height: 30px;
            background-color: #f0f0f0;
            border-radius: 50%;
        }
        .menu-section {
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .price-options {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .price-button {
            font-size: 24px;
            color: #666;
            font-weight: bold;
            background: none;
            border: 2px solid transparent;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .price-button:hover, .price-button.active {
            border-color: #2c3e50;
            color: #2c3e50;
        }
        .table-selection {
            margin-bottom: 20px;
        }
        .persons-icon {
            margin-right: 10px;
        }
        .table-numbers {
            display: flex;
            gap: 10px;
        }
        .table-button {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f0f0;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .table-button:hover, .table-button.active {
            background-color: #2c3e50;
            color: white;
        }
        .soup-options {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }
        .soup-button {
            padding: 15px;
            background-color: #f8f9fa;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 16px;
        }
        .soup-button:hover, .soup-button.active {
            background-color: #2c3e50;
            color: white;
        }
        .section-tabs {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }
        .tab {
            width: 40px;
            height: 8px;
            background-color: #ddd;
            border-radius: 4px;
            cursor: pointer;
        }
        .tab.active {
            background-color: #2c3e50;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="logo"></div>
        </div>
        <div class="main-content">
            <div class="header">
                <h1>Table</h1>
                <div class="account-badge">
                    <div class="account-icon"></div>
                    <span>Account name</span>
                </div>
            </div>
            <div class="menu-section">
                <div class="price-options">
                    <button class="price-button">299</button>
                    <button class="price-button">599</button>
                </div>
                <div class="table-selection">
                    <span class="persons-icon">ðŸ‘¥</span>
                    <div class="table-numbers">
                        <button class="table-button">1</button>
                        <button class="table-button">2</button>
                        <button class="table-button">3</button>
                        <button class="table-button">4</button>
                    </div>
                </div>
                <div class="soup-options">
                    <button class="soup-button">Black soup</button>
                    <button class="soup-button">Tom Yum Soup</button>
                    <button class="soup-button">Mala Soup</button>
                    <button class="soup-button">Pork bone broth</button>
                </div>
            </div>
            <div class="section-tabs">
                <div class="tab active"></div>
                <div class="tab"></div>
                <div class="tab"></div>
            </div>
        </div>
    </div>

    <script>
        // Add click handlers for all buttons
        document.querySelectorAll('.price-button, .table-button, .soup-button').forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from siblings
                const siblings = this.parentElement.children;
                for (let sibling of siblings) {
                    sibling.classList.remove('active');
                }
                // Add active class to clicked button
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>